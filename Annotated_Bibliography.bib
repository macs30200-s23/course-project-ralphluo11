@article{tsygankov_dark_2017,
	title = {The dark double: the {American} media perception of {Russia} as a neo-{Soviet} autocracy, 2008–2014},
	volume = {37},
	issn = {0263-3957, 1467-9256},
	shorttitle = {The dark double},
	url = {https://journals.sagepub.com/doi/10.1177/0263395715626945},
	doi = {10.1177/0263395715626945},
	abstract = {This article combines quantitative and textual analysis of editorials in leading American newspapers devoted to Russia’s internal politics from 2008 to 2014. Despite rapprochement under President Dmitry Medvedev, the media image of Russia has been overwhelmingly negative since 2008. Negative media editorial opinions of Russia reflect fears of autocratic political systems that are represented as a dangerous mirror image of the American system. To maintain this binary, aspects of Russian politics that did not fit into the neo-Soviet autocracy narrative were ignored. An original contribution of the article is its identification of key frames used by leading American media outlets to construct a narrative about contemporary Russia as a neo-Soviet autocracy. It demonstrates that this narrative is instrumental in confirming domestic perceptions of American national identity that emphasize its association with freedom at home and leadership of the ‘free world’ abroad. As such, these findings are significant for reaffirming the importance of media framings, associated narratives, and control over them to global governance and soft power.},
	language = {en},
	number = {1},
	urldate = {2025-03-30},
	journal = {Politics},
	author = {Tsygankov, Andrei P},
	month = feb,
	year = {2017},
	pages = {19--35},
	annote = {Brief Summary:
Tsygankov examines how leading American newspapers framed Russia between 2008 and 2014, revealing a consistent portrayal of Russia as a “neo-Soviet autocracy.” It shows that U.S. media primarily employed negative frames, often using historical analogies to the Soviet Union to highlight its fixed authoritarian tendencies, corruption, repression, and militaristic aggression. Tsygankov argues these portrayals serve to reinforce American national identity by defining it in opposition to Russia’s authoritarianism. Even during periods of potential improvement in U.S.-Russia relations, American media continued to depict Russia negatively, with a particular emphasis on the personalized role of Putin as an authoritarian figure. 

Evaluation:
This article provides strong evidence of American media employing consistent nationalist framing strategies, directly relevant to my exploration of American nationalism and Russian nationalism. Tsygankov’s methodology, combining textual analysis of newspaper editorials with quantitative coding of sentiment, effectively highlights media bias and narrative consistency. My project will expand on this by incorporating computational techniques to analyze large-scale media framing, potentially uncovering more detailed shifts or divergences within political spectrum that Tsygankov unified negative portrayal fails to uncover.
},
	file = {PDF:/Users/apple/Zotero/storage/TZSAFBI3/Tsygankov - 2017 - The dark double the American media perception of Russia as a neo-Soviet autocracy, 2008–2014.pdf:application/pdf},
}

