@misc{field_framing_2018,
	title = {Framing and {Agenda}-setting in {Russian} {News}: a {Computational} {Analysis} of {Intricate} {Political} {Strategies}},
	shorttitle = {Framing and {Agenda}-setting in {Russian} {News}},
	url = {http://arxiv.org/abs/1808.09386},
	doi = {10.48550/arXiv.1808.09386},
	abstract = {Amidst growing concern over media manipulation, NLP attention has focused on overt strategies like censorship and “fake news”. Here, we draw on two concepts from the political science literature to explore subtler strategies for government media manipulation: agenda-setting (selecting what topics to cover) and framing (deciding how topics are covered). We analyze 13 years (100K articles) of the Russian newspaper Izvestia and identify a strategy of distraction: articles mention the U.S. more frequently in the month directly following an economic downturn in Russia. We introduce embedding-based methods for cross-lingually projecting English frames to Russian, and discover that these articles emphasize U.S. moral failings and threats to the U.S. Our work oﬀers new ways to identify subtle media manipulation strategies at the intersection of agenda-setting and framing.},
	language = {en},
	urldate = {2025-03-30},
	publisher = {arXiv},
	author = {Field, Anjalie and Kliger, Doron and Wintner, Shuly and Pan, Jennifer and Jurafsky, Dan and Tsvetkov, Yulia},
	month = oct,
	year = {2018},
	note = {arXiv:1808.09386 [cs]},
	keywords = {Computer Science - Computation and Language},
	annote = {Brief Summary:
Field et al. (2018) analyze the media manipulation strategies in Russian news, specifically focusing on agenda-setting (what topics are emphasized) and framing (how those topics are portrayed). Using computational methods on a sample of over 100,000 Russian articles from Izvestia, they find a significant pattern of “distraction,” where economic downturns in Russia predict increased negative coverage of the United States. By leveraging embedding-based methods and cross-lingual projection, the authors identify dominant frames highlighting moral failings, security threats, and criticisms of the U.S. This strategy positions external adversaries negatively during domestic crises, thereby reinforcing national identity through implicit opposition.

Evaluation:
This paper provides a robust methodological example relevant to my project by demonstrating how computational tools (embedding-based, cross-lingual approaches) can effectively analyze nationalist frames across different languages. Its innovative use of economic indicators (Granger-causality tests) to identify subtle forms of state-driven media manipulation is notable. However, while Field et al. focus primarily on external distraction as a manipulation strategy, my work will extend this insight by directly comparing framing strategies used by different political leanings within U.S. media. My analysis complements this study by assessing how similar nationalist frames might differ across political spectra.

},
	file = {PDF:/Users/apple/Zotero/storage/J3RHAXLX/Field et al. - 2018 - Framing and Agenda-setting in Russian News a Computational Analysis of Intricate Political Strategi.pdf:application/pdf},
}

