@inproceedings{zhang_deep_2024,
	address = {Beijing, China},
	title = {A {Deep} {Learning} {Method} for {Automatic} {News} {Frame} {Identification}},
	copyright = {https://doi.org/10.15223/policy-029},
	isbn = {979-8-3503-9195-4},
	url = {https://ieeexplore.ieee.org/document/10673916/},
	doi = {10.1109/SNPD61259.2024.10673916},
	abstract = {News framing plays a crucial role in shaping public opinion and understanding of events. Traditional news frame analysis relies heavily on manual annotation, which is timeconsuming and labor-intensive. This paper proposes a novel deep learning-based method for automatic news frame identification (ANFI). By leveraging a pre-trained Transformer encoder and frame-specific semantic features, ANFI captures the latent semantic structures of news text. It then classifies the text into one of the seven commonly used generic frames: Fact, Conflict, Responsibility, Economic Consequences, Human Interest, Morality, and Leadership. Experimental results on the CNN/Daily Mail dataset demonstrate the effectiveness of our proposed method in identifying news frames automatically. The ANFI model achieves high accuracy and outperforms traditional machine learning baselines. This research provides a new perspective on the application of deep learning techniques in computational journalism and facilitates large-scale news frame analysis.},
	language = {en},
	urldate = {2025-03-26},
	booktitle = {2024 {IEEE}/{ACIS} 27th {International} {Conference} on {Software} {Engineering}, {Artificial} {Intelligence}, {Networking} and {Parallel}/{Distributed} {Computing} ({SNPD})},
	publisher = {IEEE},
	author = {Zhang, Xin and Wei, Qiyi and Zheng, Bin and Zhang, Pengzhou},
	month = jul,
	year = {2024},
	pages = {18--24},
	annote = {Brief Summary:
Zhang et al. (2024) propose a novel deep learning model (ANFI) that automates news frame identification, categorizing texts into seven generic frames: Fact, Conflict, Responsibility, Economic Consequences, Human Interest, Morality, and Leadership. Utilizing a Transformer-based architecture, ANFI leverages semantic representations from pre-trained language models (BERT) combined with frame-specific semantic features, significantly outperforming traditional methods. The method achieves high accuracy and efficiency, demonstrating strong potential for analyzing large-scale news datasets.

Evaluation:
This paper is directly relevant to my methodology, as it presents a master deep learning approach to automatically detect and classify media frames, aligning with my approach. The model’s integration of pre-trained language models and semantic features enhances both accuracy and interpretability, addressing a key methodological challenge in computational framing analysis. However, while the paper emphasizes generic frames, my work extends through examining frames specific to nationalist narratives and comparisons across political spectra. 
},
	file = {PDF:/Users/apple/Zotero/storage/JBNFUV5B/Zhang et al. - 2024 - A Deep Learning Method for Automatic News Frame Identification.pdf:application/pdf},
}

